package in.co.constructor;

public class CircleCons {
	
	private int radius;
	public static final double PI = 3.14;
	
	public CircleCons() {
		System.out.println("this is default constructor of CircleCons");
	}
	
	public CircleCons (int radius) {
		this.radius = radius;
	}
	
	public int getradius() {
		return radius;
	}
	
	public double area () {
		double area = PI * getradius() * getradius();
		return area;
	}

}
